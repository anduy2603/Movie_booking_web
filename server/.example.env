# ===========================================
# MOVIE BOOKING API - ENVIRONMENT VARIABLES
# ===========================================

# ========== PROJECT SETTINGS ==========
PROJECT_NAME=Movie Booking API
DEBUG=true
ENVIRONMENT=development

# ========== DATABASE CONFIGURATION ==========
# Example for local SQLite or PostgreSQL:
#   sqlite:///./movie_booking.db
#   postgresql+psycopg2://USER:PASSWORD@HOST:PORT/DB_NAME
DATABASE_URL=your-database-url

# ========== SECURITY SETTINGS ==========
# ⚠️ Replace these with your own secret keys in production
SECRET_KEY=your-secret-key
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ========== PASSWORD POLICY ==========
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# ========== RATE LIMITING ==========
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60
AUTH_RATE_LIMIT_CALLS=50
AUTH_RATE_LIMIT_PERIOD=60

# ========== CORS SETTINGS ==========
# Add frontend origins that are allowed to access this API
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ========== FILE UPLOAD SETTINGS ==========
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["image/jpeg","image/png","image/gif"]

# ========== DATABASE POOL SETTINGS ==========
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ========== LOGGING CONFIGURATION ==========
LOG_LEVEL=INFO
LOG_FORMAT=%(as_
